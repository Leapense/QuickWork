<Page x:Class="QuickWork.Views.Pages.QuickApp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuickWork.Views.Pages"
      xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuickApp">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="83*"/>
        </Grid.RowDefinitions>
        <wpfui:Button Content="Add Quick App" Width="200" HorizontalAlignment="Center" Margin="5,5,5,5" Padding="1" Grid.Row="0" VerticalAlignment="Top" Click="Button_Click"/>
        <Grid Grid.Row="1">
            <StackPanel Name="QuickArea" />
        </Grid>
    </Grid>
</Page>
